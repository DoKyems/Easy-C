//반복 루프를 사용하여 다음과 같은 패턴을 출력하는 프로그램을 작성하라.
//      *
//     **
//    ***
//   ****
//  *****
// ******
//*******

#include <stdio.h>
#define _CRT_SECURE_NO_WARNINGS

int main(void)
{
	int i, j;//정수형 정의

	for (i =1; i <=7; i++)//줄 수(7번 실행)
	{
		for (j = 0; j < (7 - i); j++)//0~6까지 실행
		{
			printf(" ");//공백 출력
		}

		for (j = 0; j <= i; j++)//줄 수대로 *출력
		{
			printf("*");//* 출력
		}
		printf("\n");
	}

	return 0;
}
